<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendo/css")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    
    <div class="container body-content">


        <div width="100%" height="100%" align="center" valign="center" class="page-header">

            <div class="alert alert-success alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
                <p><strong>Total Number of visitors: </strong> @ApplicationInstance.Application["Totaluser"]</p>
                <strong>
                    Current time:
                </strong>
                <span id="clock"></span>
                <div><strong>Your IP: </strong><span id="ip"></span></div>
                <div><strong>Your Address: </strong><span id="address"></span></div>
                <div style="padding:10px">
                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                        View details
                    </button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <!--<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>-->
                                <h4 class="modal-title" id="myModalLabel" align="left">Details</h4>
                            </div>
                            <div class="modal-body">
                                <pre id="details" align="left"></pre>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div id="weather">
            <a href="http://www.accuweather.com/en/us/warren-mi/48093/weather-forecast/338803" class="aw-widget-legal"></a>
            <div id="awcc1471734053270" class="aw-widget-current" data-locationkey="" data-unit="f" data-language="en-us" data-useip="true" data-uid="awcc1471734053270"></div>
            <script type="text/javascript" src="http://oap.accuweather.com/launch.js"></script>
        </div>


        <hr />

        

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ADL Recorder Application</p>
            </footer>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/chart")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/jquery/ui")
    @Scripts.Render("~/bundles/kendo")
    @RenderSection("scripts", required: false)
</body>
</html>
